SHARED_SOURCE_FILES = Split("""
   echo_shared.cc
   echo_shared.h
""")

TEST_SOURCE_FILES = Split("""
    echo.cc
    echo_service.h
    echo_service.cc
""")

OBJC_TEST_SOURCE_FILES = Split("""
    objc_echo.mm
    objc_echo_service.h
    objc_echo_service.m
""")


##############################################################################
##############################################################################

FILES = {
    'echo' : TEST_SOURCE_FILES + SHARED_SOURCE_FILES,
    'objc_echo' : OBJC_TEST_SOURCE_FILES + SHARED_SOURCE_FILES,
}

Return("FILES")
